# Environment Configuration for FINHIGH Backend
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=3000
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your-mysql-password
DB_NAME=finhigh_db

# Security Configuration
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/finhigh.log

# Email Configuration (for future features)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this
SESSION_MAX_AGE=604800000

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Redis Configuration (for caching - optional)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password

# Production specific settings (uncomment for production)
# NODE_ENV=production
# HTTPS_CERT_PATH=/path/to/certificate.crt
# HTTPS_KEY_PATH=/path/to/private.key
